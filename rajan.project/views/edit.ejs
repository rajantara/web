<%- include('./partials/header')%>

<head>
  <div class="container"></div>
  <h1>Edit Data</h1>
</head>

<div class="container">
  <form method="POST">
      <div class="form-group row">
          <label for="NO" class="col-sm-2 col-form-label">ID</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" id="ID" name="string" placeholder="id">
          </div>
      </div>
      <div class="form-group row">
          <label for="inputName" class="col-sm-2 col-form-label">name</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" name="name" placeholder="name" value="<%= item.name %>">
          </div>
      </div>
      <div class="form-group row">
          <label for="inputdate" class="col-2 col-form-label">date</label>
          <div class="col-sm-10">
              <input type="date" class="form-control" name="date" value="">
          </div>
          <div class="col-8"></div>
      </div>
      <div class="form-group row">
          <label for="inputboolean" class="col-2 col-form-label">Absent</label>
          <div class="col-10">
              <select class="custom-select" name="boolean">
                  <option id="">Choose the Absent...</option>
                  <option id="">True</option>
                  <option id="">False</option>
              </select>
          </div>
          <br />
      </div> <button type="submit" class="btn btn-primary">Update</button>
      <a class="btn btn-secondary" href="/" role="button"  on>Beck</a>   
  </form>
</div>